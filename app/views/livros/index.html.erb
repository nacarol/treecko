<h1>Listing livros</h1>

<table>
  <thead>
    <tr>
      <th>Autor</th>
      <th>Titulo</th>
      <th>Editora</th>
      <th>Edicao</th>
      <th>Dono</th>
      <th>Está emprestado?</th>
      <th>Para quem?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livros.each do |livro| %>
      <tr>
        <td><%= livro.autor %></td>
        <td><%= livro.titulo %></td>
        <td><%= livro.editora %></td>
        <td><%= livro.edicao %></td>
        <td><%= livro.dono %></td>
        <td><%= livro.emprestado %></td>
        <td><%= livro.pessoa.nome %></td>
        <td><%= link_to 'Exibir', livro %></td>
        <td><%= link_to 'Editar', edit_livro_path(livro) %></td>
        <td><%= link_to 'Apagar', livro, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Livro', new_livro_path %>
